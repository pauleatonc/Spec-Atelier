  </div>

  <div class="field">
    <%= form.label :city_id %><br />
    <%= form.grouped_collection_select :city_id, State.order(:name), :cities, :name, :id, :name, prompt: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
