<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="postcontent col-md-6">

        <%= form_with(model: brand, local: true) do |form| %>
        <% if brand.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(brand.errors.count, "error") %>
              prohibited this brand from being saved:</h2>

            <ul>
              <% brand.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :logo %>
          <%= form.file_field :logo, multiple: false, accept: 'image/jpeg, image/jpg, image/gif, image/png', class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :name %>
          <%= form.text_field :name, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :description %>
          <%= form.text_field :description, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :contact %>
          <%= form.text_field :contact, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :email %>
          <%= form.text_field :email, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :phone %>
          <%= form.text_field :phone, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :address %>
          <%= form.text_field :address, class:"form-control" %>
        </div>

        <div class="field">
          <%= form.label :country %><br/>
          <%= collection_select(:state, :country_id, Country.all, :id, :name, {prompt: true}, {class:"form-control"}) %>
        </div>

        <div class="field">
          <%= form.label :state %><br/>
          <%= form.grouped_collection_select :city_id, Country.order(:name), :states, :name, :id, :name, {prompt: true}, {class:"form-control"} %>
        </div>

        <div class="field">
          <%= form.label :city_id %><br/>
          <%= form.grouped_collection_select :city_id, State.order(:name), :cities, :name, :id, :name, {prompt: true}, {class:"form-control"} %>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>

    </div>
  </div>
</div>
</section>
