<body>
  <div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Projects</h1>

    <table id="myTable" class="table">
      <thead>
        <tr>
          <th>User</th>
          <th>Name</th>
          <th>Description</th>
          <th>Office</th>
          <th>Project type</th>
          <th>Project traffic</th>
          <th>City</th>
          <th>Options</th>
        </tr>
      </thead>

      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.user.firstname + " " + project.user.lastname%></td>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= project.office %></td>
            <td><%= project.project_type.category %></td>
            <td><%= project.project_traffic.category %></td>
            <td><%= project.city.name %></td>
            <td><%= link_to 'Show', project %>
            <%= link_to 'Edit', edit_project_path(project) %>
            <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Project', new_project_path %>

  </div>
  <script>
  $(document).ready( function () {
      $('#myTable').DataTable();
  } );
  </script>
</body>
