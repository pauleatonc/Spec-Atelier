<body >
  <div class="container">
    <div class="jumbotron">
      <div class="col-md-4">
              <p id="notice"><%= notice %></p>
              <p>
                <strong>User:</strong>
                <%= @project.user.firstname + " " + @project.user.lastname %>
              </p>
              <p>
                <strong>Name:</strong>
                <%= @project.name %>
              </p>
              <p>
                <strong>Description:</strong>
                <%= @project.description %>
              </p>
              <p>
                <strong>Office:</strong>
                <%= @project.office %>
              </p>
              <p>
                <strong>Project type:</strong>
                <%= @project.project_type.category %>
              </p>
              <p>
                <strong>Project traffic:</strong>
                <%= @project.project_traffic.category %>
              </p>
              <p>
                <strong>City:</strong>
                <%= @project.city.name %>
              </p>

              <%= link_to 'Editar informacion', edit_project_path(@project), class: "btn btn-secondary"%> |
              <%= link_to 'Volver', projects_path, class: "btn btn-secondary" %>
      </div>
      <div class="col-md-4">
          <h3><%= link_to 'Especificar', project_products_path(@project), class: "btn btn-info" %></h3>
      </div>

    </div>
  </div>

  <div class="container">
    <% @project.products.each do |product| %>
      <tr>
        <td>
          <h3><%= product.title %></h3>
          <p><%= product.description %></p>
          <h6>Referencia:<%= product.brand.name %></h6>
        </td>
        <td><%= link_to 'Show', product %></td>
      </tr>
    <% end %>
  </div>

</body>
