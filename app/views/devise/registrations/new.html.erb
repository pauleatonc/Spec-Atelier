<section id="page-title">
  <div class="container clearfix">
    <h1>Registrate</h1>
    <span>Lleva tu proyecto de la forma a la materia.</span>
  </div>
</section>

<section id="content">
  <div class="content-wrap">
    <div class="container clearfix">
      <div class="postcontent col-md-6">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, multiple: false, accept: 'image/jpeg, image/jpg, image/gif, image/png', class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :firstname %><br/>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :lastname %><br/>
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :gender %><br/>
          <%= collection_select(:user, :gender_id, Gender.all, :id, :name, {prompt: true} ,{class:"form-control"}) %>
        </div>

        <div class="field">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :country %><br/>
          <%= collection_select(:state, :country_id, Country.all, :id, :name, {prompt: true} ,{class:"form-control"}) %>
        </div>

        <div class="field">
          <%= f.label :state %><br/>
          <%= f.grouped_collection_select :city_id, Country.order(:name), :states, :name, :id, :name, {prompt: true} ,{class:"form-control"} %>
        </div>

        <div class="field">
          <%= f.label :city_id %><br/>
          <%= f.grouped_collection_select :city_id, State.order(:name), :cities, :name, :id, :name, {prompt: true} ,{class:"form-control"} %>
        </div>

        <div class="field">
          <%= f.label :company %><br/>
          <%= f.text_field :company, autofocus: true, autocomplete: "empresa", class:"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>
              characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control col-md-6" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-md-6" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
</section>
